@model shanuMVCUserRoles.Models.ProductModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@section Scripts{
    <script src="~/Scripts/zoom.js"></script>
    <script src="~/Scripts/tr.js"></script>
}
<link href="~/Content/zoom.css" rel="stylesheet">


<div class="container">
    <div class="row">

        <div class="col-sm-8" style="padding-left: 5%;padding-right: 5%">
            <img src="@Url.Content(Model.imagePath)" class="img-responsive" style="border-radius: 15px; margin: 3%;" data-action="zoom" />
        </div>

        <div class="col-sm-4" style="background-color: #fdff87; border-radius: 3%; width: auto; padding: 3% ; margin-top: 1%; justify-content: center">

            <h1 style="color: black">@Model.price грн.</h1>
            <small>The best price in tne internet!</small><br />
            @Html.ActionLink("Add to cart", "AddCart", new { id = Model.id }, new { @class = "btn btn-success", @style = "border-radius: 4px; margin: 1%" })

        </div>


    </div>

    <div class="row">
        <div class="col">
            <h2>@Model.title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>@Model.description</p>
        </div>

    </div>




</div>

@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    <button class="btn-info">  @Html.ActionLink("Edit", "Edit", new { id = Model.id }, new { @class = "btn-info" }) </button>
    <button class="btn-default"> @Html.ActionLink("Back to List", "Index")</button>
}



