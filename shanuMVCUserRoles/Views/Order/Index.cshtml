@{
    ViewBag.Title = "Index";
}
@model List<shanuMVCUserRoles.Models.OrderModel>
@using shanuMVCUserRoles.Models;
<style>
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        background-color: white;
        margin-bottom: 5px;
        margin-top: 5px;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }
</style>
@if (Model.Count() == 0)
{
    <h2>List is empty</h2>
}
else
{
    <div class="row">

        @foreach (var item in Model)
        {

            <div class="col">

                <div class="card">
                    <a href="~/Order/Details/@item.id">
                        <div class="container">

                            <h2><b>@item.customerName</b></h2>
                            <h3><b>@item.customerNumber</b></h3>
                            <h4><b>@item.customerMail</b></h4>
                            <p>@item.total грн</p>

                        </div>
                    </a>
                </div>

            </div>
        }
    </div>
}

